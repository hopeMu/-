/* pages/repair/repair.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}

.repair-container {
  width: 100%;
  height: 100%;
  padding: 20rpx 30rpx 50rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  padding-bottom: 100rpx;
}

.repair-item {
  width: 100%;
  margin-top: 20rpx;
}
.r_text{
  width: 100%;
  text-align: right;
}


.item-inp {
  width: 100%;
  height: 90rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
  background-color: #fff;
}

.item-tit-small {
  font-size: 26rpx;
  color: #999;
}

.item-textarea {
  width: 100%;
  min-height: 300rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
  background-color: #fff;
}

.item-upload {
  width: 100%;
}

.item-img {
  display: inline-block;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  position: relative;
}
.item-img image{
  width: 100%;
  height: 100%;
}
.cha_icon{
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  z-index: 100;
  width: 30rpx;
  height: 30rpx;
  background-color: rgba(0,0,0,.3);
  border-radius: 15rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
}
.item-vids {
  display: inline-block;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  position: relative;
}
.item-vid{
  width: 100%;
  height: 100%;
}
.btn {
  margin-top: 100rpx;
  left: 0;
  width: 100%;
  padding-bottom: 100rpx;
}

.repair-btn {
  width: 90%;
  margin: 0 auto;
  background-color: #279b5f;
  color: #fff;
}
