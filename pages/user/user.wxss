page{
  width: 100%;
  height: 100%;
  position: relative;
}
.header{
  width: 90%;
  height:128rpx;
  margin: 0 auto;
  padding: 42rpx 0;
}
.h_left{
  float: left;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
}
.h_left image{
  width: 100%;
  height: 100%;
}
.h_right{
  float: left;
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  padding-top: 14rpx;
}


.xian{
  width: 100%;
  height: 8rpx;
  background-color: #ccc;
  opacity: .2;
}
.content{
  width: 90%;
  margin: 5% auto;
  /* background-color: red; */
}
.title{
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 600;
  padding: 30rpx 0;
}
.c_box{
  width: 100%;
}
.box1_img{
  display: block;
  width: 202rpx;
  height: 201rpx;
  margin: 200rpx auto 50rpx;
}
.c_text{
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
}
.list{
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .2)
}
.l_left{
  float: left;
  width: 75%;
}
.l_top{
  width: 100%;
}
.l_top text{
  margin-right: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}
.l_top text:nth-child(1){
  margin-right: 30rpx;
}
.l_bottom{
  width: 100%;
  vertical-align: top;
}
.l_bottom text{
  margin-right: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}
.l_center{
  float: left;
  width: 12%;
  height: 120rpx;
  font-size: 24rpx;
  line-height: 100rpx;
  text-align: center;
}
.l_right{
  float: right;
  width: 5%;
  height: 100%;
}
.l_right image{
  width: 18rpx;
  height: 31rpx;
  margin: 35rpx auto;
}
.phone{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2)
}
.p_box{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 600rpx;
  height: 400rpx;
  margin-left: -300rpx;
  margin-top: -200rpx; 
  border-radius: 20rpx;
  background-color: #fff;
  font-size: 36rpx;
  line-height: 48rpx;
}
.p_text{
  padding: 40rpx;
  padding-top: 80rpx;
  text-align: center;
}
.p_box button{

  width: 80%;
  margin: 50rpx auto;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  border: 1rpx solid rgba(0, 0, 0, 0);
  background-color: #279B5F;
  border-radius: 60rpx;
  color: #fff;
}
.p_box button::after {
  border: none;
}
