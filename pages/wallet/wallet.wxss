/* pages/wallet/wallet.wxss */
page{
  height: 100%;
}
.wallet-container{
  width: 100%;
  height: 100%;
}
.wallet-top{
  width: 100%;
  height: 350rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
.wallet-img{
  width: 100%;
  height: 100%;
}
.wallet-text{
  position: absolute;
  top: 0;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}
.text-tit{
  font-size: 30rpx;
  color: #fff;
}
.text-con{
  margin-top: 30rpx;
  color: #fff;
}
.wallet-btn{
  width: 200rpx;
  height: 60rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0;margin: 0;
  margin-top: 30rpx;
}

.wallet-balance{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.xian{
  width: 100%;
  height: 8rpx;
  background-color: #ccc;
  opacity: .2;
}