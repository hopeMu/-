    width: 100%;
    height: 100%;
    background-color: #eee;
}
.news-cantainer{
    width: 100%;
    height: 100%;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
}
.news-box{
    width: 100%;
    height: 180rpx;
    border-radius: 10rpx;
    background-color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-top: 20rpx;
}
